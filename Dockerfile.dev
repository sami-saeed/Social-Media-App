FROM ruby:3.2-slim

# Install OS dependencies, including Chromium
RUN apt-get update -qq && apt-get install -y --no-install-recommends \
    build-essential git curl pkg-config \
    libsqlite3-dev libvips libyaml-dev \
    nodejs npm \
    chromium chromium-driver \
    && rm -rf /var/lib/apt/lists/*

# Upgrade Bundler
RUN gem install bundler -v 2.4.15

# Set environment for Bundler
ENV BUNDLE_PATH=/usr/local/bundle \
    BUNDLE_JOBS=4 \
    BUNDLE_RETRY=3 \
    PATH=$BUNDLE_PATH/bin:$PATH \
    CHROME_BIN=/usr/bin/chromium \
    CHROMIUM_PATH=/usr/bin/chromium

WORKDIR /app

# Copy Gemfile first to leverage Docker cache
COPY Gemfile Gemfile.lock ./

# Install gems
RUN bundle install --jobs 4 --retry 3

# Copy the rest of the app
COPY . .

# Copy entrypoint script
COPY entrypoint.sh /usr/bin/entrypoint.sh
RUN chmod +x /usr/bin/entrypoint.sh

EXPOSE 3000

# Entrypoint script will handle migrations
ENTRYPOINT ["entrypoint.sh"]
CMD ["rails", "server", "-b", "0.0.0.0"]
