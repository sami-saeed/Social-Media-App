<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-8">
    <div class="card shadow">
      <div class="card-body">
        <h1 class="card-title text-center mb-4 text-primary">Create New Post</h1>

        <!-- Render the form partial -->
        <%= render "form", post: @post %>

        <!-- Back Button -->
        <div class="text-center mt-4">
          <%= button_to "Back", posts_path, method: :get, class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>
