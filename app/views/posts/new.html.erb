<div class="post-form-bg d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-8">
    <div class="post-form-card shadow">
    
        <h1 class="text-center mb-4">Create New Post</h1>

        <!-- Render the form partial -->
        <%= render "form", post: @post %>

        <!-- Back Button -->
        <div class="text-center mt-4">
          <%= button_to "Back", posts_path, method: :get, class: "btn user-btn" %>
        </div>
    
    </div>
  </div>
</div>
