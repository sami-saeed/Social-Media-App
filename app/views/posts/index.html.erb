<!-- Background wrapper -->
<div class="bg-themed">

  <!-- Header: Title + Create Button -->
  <div class="container">
    <div class="posts-header d-flex align-items-center justify-content-between mb-4">
      <h1>All Posts</h1>
      <%= button_to "âž• New Post", new_post_path, method: :get, class: "btn btn-primary shadow-sm" %>
    </div>
    <div class="mt-3">
      <h3>Want to create a post from URL?</h3>
      <%= render "posts/import_form" %>
    </div>

    <!-- Posts list -->
    <% if @all_posts.any? %>
      <div class="row g-2 posts-list">
        <%= render partial: "posts/show", collection: @all_posts, as: :post %>
      </div>
    <% else %>
      <div class="alert alert-info text-center">
        No posts found. Be the first to create one!
      </div>
    <% end %>
  </div>
  
</div>
