<div class="container mt-5">
  <h1 class="text-center mb-4 text-primary">All Users</h1>
  
  <ul class="list-group">
    <% @users.each do |user| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <span ><%=user.username%></span>
        <%= link_to "View Profile", user_path(user), class: "text-decoration-none badge bg-secondary" %>
      </li>
    <% end %>
  </ul>
</div>
